{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node16",
    "outDir": "./lib",
    "inlineSourceMap": true,
    "strict": true,
    "lib": ["ES2020"],
    "target": "es2020",
    "types": ["@adonisjs/core", "@types/jest"],
    "strictFunctionTypes": false,
    "skipLibCheck": true
  },
  "include": ["./adonis-typings/**/*", "./src/**/*", "./providers/**/*"]
}
